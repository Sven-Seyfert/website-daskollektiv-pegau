---
layout: 'base.njk'
pagination:
    data: collections.post
    size: 3
    alias: posts
    reverse: true
---

<div class="section container">

    <h1 class="section-title">Alle Veranstaltungen</h1>

    <ul role="list" class="articles__list flow">
        {%- for post in posts -%}
        {% include 'article-snippet.njk' %}
        {%- endfor %}
    </ul>

    <div class="flex-group page-nav">
        {% if pagination.href.previous %}<a href="{{ pagination.href.previous }}" class="btn btn--neutral"><i class="fa fa-caret-left" aria-hidden="true"></i>&nbsp;&nbsp;Vorherige Artikel</a>{% endif %}
        {% if pagination.href.next %}<a href="{{ pagination.href.next }}" class="btn btn--neutral">NÃ¤chste Artikel&nbsp;&nbsp;<i class="fa fa-caret-right" aria-hidden="true"></i></a>{% endif %}
    </div>

</div>
